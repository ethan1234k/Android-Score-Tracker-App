<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/twoPlayerButton"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Two Players"
            android:onClick="onTwoPlayerClick" />

        <Button
            android:id="@+id/threePlayerButton"
            android:layout_below="@+id/twoPlayerButton"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Three Players"
            android:onClick="onThreePlayerClick" />


        <Button
            android:id="@+id/fourPlayerButton"
            android:layout_below="@+id/threePlayerButtonPlayerButton"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Four Players"
            android:onClick="onFourPlayerClick" />


    </LinearLayout>


</RelativeLayout>